    ],
    "options": {
      "label": "Custom CSS",
      "tooltip": "Add custom CSS to the element using the [element-id] placeholder."
    }
  },
  "styleEditor": {
    "type": "styleEditor",
    "access": "public",
    "value": [],
    "options": []
  },
  "customAttributes": {
    "type": "group",
    "access": "public",
    "value": [
      "extraDataAttributes"
    ],
    "options": {
      "label": "Custom Attributes"
    }
  },
  "extraDataAttributes": {
    "type": "string",
    "access": "public",
    "value": "",
    "options": {
      "label": "Extra Data Attributes",
      "description": "Add data attributes to your element (ex. data-name=john data-age=28)"
    }
  },
  "designTab": {
    "type": "group",
    "access": "protected",
