  "sharedAssetsLibrary": {
    "access": "protected",
    "type": "string",
    "value": {
      "libraries": [
        {
          "rules": {
            "rowWidth": {
              "rule": "!value",
              "options": {
                "value": "boxed"
              }
            }
          },
          "libsNames": [
            "fullWidth"
          ]
        },
        {
          "rules": {
            "fullHeight": {
              "rule": "toggle"
            }
          },
          "libsNames": [
            "fullHeight"
          ]
        }
      ]
    }
  },
  "initChildren": {
    "access": "protected",
    "type": "object",
    "value": [
